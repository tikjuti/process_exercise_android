<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/music_img"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="33dp"
        android:padding="20dp"
        android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/title"
        android:layout_width="422dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/controls"
        android:layout_below="@+id/music_img"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:padding="18dp"
        android:text="TITLE OF THE SONG"
        android:textSize="20dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/controls"
        android:layout_width="429dp"
        android:layout_height="187dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="7dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/times2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="49dp"
            android:layout_marginTop="-16dp"
            android:layout_marginEnd="350dp"
            android:text="0:00"
            android:textAlignment="textEnd"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/menu_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/pausePlay"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/next"
                android:src="@drawable/baseline_keyboard_double_arrow_left_24" />

            <ImageView
                android:id="@+id/pausePlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/baseline_pause_24" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/pausePlay"
                android:src="@drawable/baseline_keyboard_double_arrow_right_24" />

        </RelativeLayout>

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="398dp"
            android:layout_height="41dp"
            android:layout_below="@id/menu_icon"
            android:layout_marginTop="-6dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="17dp"
            android:layout_marginBottom="29dp"
            android:text="0:00" />

        <TextView
            android:id="@+id/timesTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="38dp"
            android:text="0:00" />

    </RelativeLayout>
</RelativeLayout>