<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="18dp"
        android:text="TITLE OF THE SONG"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/music_img"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_above="@+id/controls"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:padding="20dp"
        android:src="@drawable/placeholder" />

    <RelativeLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/menu_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/pausePlay"
                android:layout_toStartOf="@id/next"
                android:layout_alignParentStart="true"
                android:src="@drawable/baseline_keyboard_double_arrow_left_24" />

            <ImageView
                android:id="@+id/pausePlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/baseline_pause_24" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/pausePlay"
                android:layout_alignParentEnd="true"
                android:src="@drawable/baseline_keyboard_double_arrow_right_24" />
        </RelativeLayout>
        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/menu_icon"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/seek_bar"
            android:layout_below="@id/menu_icon"
            android:layout_alignBottom="@id/seek_bar"
            android:textAlignment="textEnd"
            android:text="0:00"
            android:textSize="20sp" />
    </RelativeLayout>
</RelativeLayout>